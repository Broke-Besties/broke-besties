generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
        
model User {
  id                        String                        @id @default(cuid())
  name                      String
  email                     String                        @unique
  createdAt                 DateTime                      @default(now())
  updatedAt                 DateTime                      @updatedAt
  members                   GroupMember[]
  sentInvites               GroupInvite[]                 @relation("InviteSender")
  receivedInvites           GroupInvite[]                 @relation("InviteReceiver")
  lentDebts                 Debt[]                        @relation("Lender")
  borrowedDebts             Debt[]                        @relation("Borrower")
  tabs                      Tab[]
  debtTransactions          DebtTransaction[]             @relation("TransactionRequester")
  lentRecurringPayments     RecurringPayment[]           @relation("RecurringPaymentLender")
  recurringPaymentBorrowers RecurringPaymentBorrower[]
}

model Group {
  id        Int           @id @default(autoincrement())
  name      String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  members   GroupMember[]
  invites   GroupInvite[]
  debts     Debt[]
  receipts  Receipt[]
}

model GroupMember {
  id        Int      @id @default(autoincrement())
  userId    String
  groupId   Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

model GroupInvite {
  id         Int      @id @default(autoincrement())
  groupId    Int
  invitedBy  String
  invitedEmail String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender     User     @relation("InviteSender", fields: [invitedBy], references: [id], onDelete: Cascade)
  receiver   User?    @relation("InviteReceiver", fields: [invitedEmail], references: [email], onDelete: Cascade)

  @@unique([groupId, invitedEmail])
  @@index([invitedEmail])
  @@index([groupId])
}

model Debt {
  id           Int               @id @default(autoincrement())
  amount       Float
  description  String?
  status       String            @default("pending")
  lenderId     String
  borrowerId   String
  groupId      Int
  receiptId    String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  lender       User              @relation("Lender", fields: [lenderId], references: [id], onDelete: Cascade)
  borrower     User              @relation("Borrower", fields: [borrowerId], references: [id], onDelete: Cascade)
  group        Group             @relation(fields: [groupId], references: [id], onDelete: Cascade)
  receipt      Receipt?          @relation("DebtReceipt", fields: [receiptId], references: [id], onDelete: SetNull)
  transactions DebtTransaction[]

  @@index([lenderId])
  @@index([borrowerId])
  @@index([groupId])
  @@index([receiptId])
}

model Receipt {
  id        String   @id @default(cuid())
  groupId   Int
  rawText   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  debts     Debt[]   @relation("DebtReceipt")

  @@index([groupId])
}

model Tab {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String
  personName  String
  status      String   @default("pending")
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DebtTransaction {
  id                  Int       @id @default(autoincrement())
  debtId              Int
  type                String    // "drop" or "modify"
  status              String    @default("pending") // "pending", "approved", "rejected", "cancelled"

  requesterId         String
  lenderApproved      Boolean   @default(false)
  borrowerApproved    Boolean   @default(false)

  // For modifications only
  proposedAmount      Float?
  proposedDescription String?
  reason              String?

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  resolvedAt          DateTime?

  debt                Debt      @relation(fields: [debtId], references: [id], onDelete: Cascade)
  requester           User      @relation("TransactionRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  @@index([debtId])
  @@index([requesterId])
  @@index([status])
}

model RecurringPayment {
  id          Int                           @id @default(autoincrement())
  amount      Float
  description String?
  status      String                        @default("active") // "active" or "inactive"
  lenderId    String
  frequency   Int                           // Frequency in days
  createdAt   DateTime                      @default(now())
  updatedAt   DateTime                      @updatedAt

  lender      User                         @relation("RecurringPaymentLender", fields: [lenderId], references: [id], onDelete: Cascade)
  borrowers   RecurringPaymentBorrower[]

  @@index([lenderId])
}

model RecurringPaymentBorrower {
  id                 Int              @id @default(autoincrement())
  userId             String
  recurringPaymentId Int
  splitPercentage    Float            // Percentage of the total amount this borrower owes (0-100)
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  recurringPayment   RecurringPayment @relation(fields: [recurringPaymentId], references: [id], onDelete: Cascade)
  createdAt          DateTime         @default(now())

  @@unique([userId, recurringPaymentId])
  @@index([userId])
  @@index([recurringPaymentId])
}