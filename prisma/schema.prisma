generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
        

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  members        GroupMember[]
  sentInvites    GroupInvite[] @relation("InviteSender")
  receivedInvites GroupInvite[] @relation("InviteReceiver")
}

model Group {
  id        Int           @id @default(autoincrement())
  name      String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  members   GroupMember[]
  invites   GroupInvite[]
}

model GroupMember {
  id        Int      @id @default(autoincrement())
  userId    String
  groupId   Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

model GroupInvite {
  id         Int      @id @default(autoincrement())
  groupId    Int
  invitedBy  String
  invitedEmail String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  sender     User     @relation("InviteSender", fields: [invitedBy], references: [id], onDelete: Cascade)
  receiver   User?    @relation("InviteReceiver", fields: [invitedEmail], references: [email], onDelete: Cascade)

  @@unique([groupId, invitedEmail])
  @@index([invitedEmail])
  @@index([groupId])
}
